" Syntax Highlighting
syntax on

" Auto Indentation
set autoindent
set cindent

set nu " display line numbers
set hlsearch " hilight search results
set showmatch " highlight matching brackets
set ruler " display current line and colomn number
set laststatus=2 " always show status
set statusline=\ %<%l:%v\ [%P]%=%a\ %h%m%r\ %F\

" Tab Space Preferences
set ts=4	" \t width
set sts=4	" tab space width
set shiftwidth=4 " space width when auto-indented

" Smart Settings
set smartcase
set smarttab
set smartindent

set fileencoding=utf-8

" colorscheme one
" set background=dark
